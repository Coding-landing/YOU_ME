<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_gravity="bottom|right"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/margin_12dp"
        android:backgroundTint="#C8FFBA"
        android:elevation="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#C8FFBA"
            android:visibility="invisible">

            <androidx.cardview.widget.CardView
                android:id="@+id/dummy1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/margin_12dp"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/dummy2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher"  />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/dummy3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/dummy1"
                app:layout_constraintStart_toEndOf="@id/dummy1"
                android:layout_marginStart="@dimen/margin_12dp"
                />
            <TextView
                android:id="@+id/dummy4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/dummy1"
                app:layout_constraintStart_toEndOf="@id/dummy1"
                android:layout_marginStart="@dimen/margin_12dp"
                />
            <CheckBox
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="@dimen/margin_12dp"
                android:button="@null"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="@dimen/margin_12dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/image_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="@dimen/margin_12dp"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/people_image_view"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    tools:src="@mipmap/ic_launcher"  />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/image_card_view"
                app:layout_constraintEnd_toStartOf="@id/image_card_view"
                tools:text="이름"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginEnd="@dimen/margin_12dp"
                />
            <TextView
                android:id="@+id/name_nickname_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/name_text_view"
                app:layout_constraintEnd_toStartOf="@id/name_text_view"
                tools:text="닉네임"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="@dimen/margin_12dp"
                />
            <TextView
                android:id="@+id/phone_number_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/image_card_view"
                app:layout_constraintEnd_toStartOf="@id/image_card_view"
                android:layout_marginStart="@dimen/margin_12dp"
                tools:text="010-1234-1234"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="@dimen/margin_12dp"
                />
            <CheckBox
                android:id="@+id/liked_check_box"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:background="@drawable/check_detail_heart"
                android:button="@null"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>

