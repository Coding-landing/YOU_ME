<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.YouAndMe" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:timePickerStyle">@style/MyTimePickerStyle</item>
    </style>

    <style name="Theme.YouAndMe" parent="Base.Theme.YouAndMe" />

    <style name="NoUnderlineEditText">
        <item name="android:background">@null</item></style>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/main_font</item>
    </style>
    <style name="MyTimePickerStyle" parent="android:Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">#00FFCE</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/splash</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">4000</item>
        <item name="postSplashScreenTheme" >@style/Theme.YouAndMe</item>
    </style>
</resources>